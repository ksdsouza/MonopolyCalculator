<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xkdawg.monopolycalculator.propertyManagerLayout">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="16dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TitleColor"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="#04bcfc"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text="Oriental Ave" />

                <LinearLayout
                    android:id="@+id/Rent_Layout"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:weightSum="2">

                    <TextView
                        style="@style/PropertyTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Rent" />

                    <TextView
                        android:id="@+id/rent"
                        style="@style/PropertyTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="$24" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/OneHouse"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4">

                    <TextView
                        style="@style/PropertyTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="3"
                        android:text="With 1 House" />

                    <TextView
                        android:id="@+id/H1"
                        style="@style/PropertyTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="$24" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/TwoHouse"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4">

                    <TextView

                        style="@style/PropertyTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="3"
                        android:text="With 2 Houses" />

                    <TextView
                        android:id="@+id/H2"
                        style="@style/PropertyTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="$48" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ThreeHouse"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4">

                    <TextView
                        style="@style/PropertyTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="3"
                        android:text="With 3 Houses" />

                    <TextView
                        android:id="@+id/H3"
                        style="@style/PropertyTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="$96" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/FourHouse"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4">

                    <TextView
                        style="@style/PropertyTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="3"
                        android:text="With 4 Houses" />

                    <TextView
                        android:id="@+id/H4"
                        style="@style/PropertyTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="$192" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Hotel"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:weightSum="4">

                    <TextView
                        style="@style/PropertyTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="3"
                        android:gravity="left"
                        android:text="With Hotel" />

                    <TextView
                        android:id="@+id/H5"
                        style="@style/PropertyTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="$384" />
                </LinearLayout>
                <View
                    android:layout_margin="8dp"
                    android:background="#BDBDBD"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </View>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:weightSum="4">
                    <TextView
                        style="@style/PropertyTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:text="Mortgage Value" />

                    <TextView
                        android:id="@+id/mortVal"
                        style="@style/PropertyTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="$10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:weightSum="4">
                    <TextView
                        style="@style/PropertyTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:text="Unmortgage" />

                    <TextView
                        android:id="@+id/unmortVal"
                        style="@style/PropertyTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="$11" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:weightSum="4">

                    <TextView
                        style="@style/PropertyTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:text="Cost Per House" />

                    <TextView
                        android:id="@+id/houseCost"
                        style="@style/PropertyTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="$10" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
